{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@vigillabs/timescale-db-core": ["../../packages/core/dist"],
      "@vigillabs/timescale-db-schemas": ["../../packages/schemas/dist"]
    }
  },
  "include": ["src", "config", "migrations"]
}
